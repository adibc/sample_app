<!-- the micropost form (create the micropost) view -->
<%= form_for(@micropost) do |f| %>
  <%= render "shared/error_messages", object: @micropost %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost...", onkeyup:"updateCharsLeft()", id: "text" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

<span id="chars">140 characters remaining</span>

<script>
function updateCharsLeft()
{
  var textLength = document.getElementById("text").value.length;
  var charsLeft = 140 - textLength;
  document.getElementById("chars").innerHTML = charsLeft + " characters remaining"
};
</script>

